
<div style="position: relative; width: 100vw; height: 100vh;">
    <div>
        <%= @circle_y %>
    </div>

    <svg width="100" height="100" style={"position: absolute; top: #{@circle_y}px; left: 50%; transform: translate(-50%,
        -50%);"}>
        <circle id="circle" phx-hook="MoveCircle" cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="red" />
    </svg>
</div>
